[Unit]
Description=Gateway Socket Relay (browser.sock â†’ Gateway)
After=network.target

[Service]
Type=simple
Environment=BROWSER_SOCKET=/tmp/openclaw-chromext-relay.sock
Environment=GATEWAY_HOST=127.0.0.1
Environment=GATEWAY_PORT=18792
WorkingDirectory=/root/chrome-relay
ExecStart=/usr/bin/node gateway-socket-relay/relay.js
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
